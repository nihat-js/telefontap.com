model PhoneSpec {
  id              Int     @id @default(autoincrement())
  brand           String
  model           String
  ramInGB         Int? // RAM capacity in GB
  batteryCapacity Int? // Battery capacity in mAh
  screenSize      Float? // Screen size in inches
  operatingSystem String? // Operating system (e.g., Android, iOS)
  releaseYear     Int? // Year of release

  // items Item[]
}

