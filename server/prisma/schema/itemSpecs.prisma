model PhoneSpec {
  id                    Int     @id @default(autoincrement())
  brandName             String?
  brandId               Int?
  model                 String
  dimensions            String?
  weight                String?
  displayType           String?
  displaySize           String?
  displayResolution     String?
  operatingSystem       String?
  chipset               String?
  CPU                   String?
  GPU                   String?
  batteryType           String?
  rearCameras           String?
  frontCameras          String?
  internalMemoryOptions String?
  colorOptions          String?
  description           String?

  releaseDate String? // 
  benchmarks  String?
  sensors     String?

  status PhoneSpecStatus @default(ACTIVE)

  // items Item[]

  @@unique([brandId, model])
}

enum PhoneSpecStatus {
  ACTIVE
  IN_ACTIVE
}

model LaptopSpecs {
  id              Int     @id @default(autoincrement())
  brand           String
  model           String
  ramInGB         Int? // RAM capacity
  storageInGB     Int? // Storage capacity
  screenSize      Float? // Screen size
  batteryCapacity Int? // Battery capacity
  operatingSystem String? // Operating system
  releaseYear     Int?

  // items Item[]
}

model TabletSpecs {
  id              Int     @id @default(autoincrement())
  brand           String
  model           String
  ramInGB         Int?
  storageInGB     Int?
  screenSize      Float?
  batteryCapacity Int?
  operatingSystem String?
  releaseYear     Int?

  // items Item[] 
}
