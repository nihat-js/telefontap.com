model PhoneSpec {
  id               Int     @id @default(autoincrement())
  brand            String?
  brandId          Int?
  model            String?
  colorOptions     String?
  releasedIn       String? // 
  dimensions       String?
  weight           String?
  storageOptions   String?
  decsription      String?
  battery          String?
  benchmarkResults String?
  sensors          String?

  // items Item[]
}

model LaptopSpecs {
  id              Int     @id @default(autoincrement())
  brand           String
  model           String
  ramInGB         Int? // RAM capacity
  storageInGB     Int? // Storage capacity
  screenSize      Float? // Screen size
  batteryCapacity Int? // Battery capacity
  operatingSystem String? // Operating system
  releaseYear     Int?

  // items Item[]
}

model TabletSpecs {
  id              Int     @id @default(autoincrement())
  brand           String
