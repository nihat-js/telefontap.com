model Country {
  id        Int     @id @default(autoincrement())
  name      String  @unique
  code      String  @unique // ISO code (e.g., "US" for the United States)
  phoneCode String?

  City City[]
  Item Item[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

model City {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  countryId   Int?
  countryCode String?
  country     Country? @relation(fields: [countryId], references: [id])

  Item Item[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}
