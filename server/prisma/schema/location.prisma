model Country {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  code      String   @unique // ISO code (e.g., "US" for the United States)
  City      City[]
  Item      Item[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model City {
  id        Int      @id @default(autoincrement())
  name      String
  countryId Int
  country   Country  @relation(fields: [countryId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Item      Item[]
}
